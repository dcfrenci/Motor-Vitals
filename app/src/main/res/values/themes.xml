<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MotorVitals" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!--  Bottom navigation bar  -->
    <style name="BottomNavigationViewStyle">
        <item name="android:background">@drawable/shape_round_style</item>
        <item name="itemIconTint">@drawable/selector_navigation_bar</item>
        <item name="itemTextColor">@drawable/selector_navigation_bar</item>
        <item name="itemActiveIndicatorStyle">@style/BottomNavigationViewStyleActive</item>
    </style>
    <style name="BottomNavigationViewStyleActive">
        <item name="background">@color/dark_accent</item>
    </style>

    <!--  TextView  -->
    <style name="TextViewStyle">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--  Floating add button  -->
    <style name="FloatingActionButtonStyle">
        <item name="android:backgroundTint">@color/dark_accent</item>
        <item name="android:layout_marginBottom">@dimen/floating_button_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/floating_button_margin_right</item>
        <item name="android:elevation">@dimen/cardview_default_elevation</item>
    </style>

    <style name="Theme.MotorVitals" parent="Base.Theme.MotorVitals"/>
</resources>