<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_background">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/motorcycleRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/card_to_top"
            android:layout_marginBottom="0dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_button_motorcycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"

            style="@style/FloatingActionButtonStyle"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/button_description"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:tint="@color/dark_text"
            android:elevation="10dp"

            app:srcCompat="@drawable/baseline_add_24"
            app:layout_constraintEnd_toEndOf="@+id/floating_button_motorcycle"
            app:layout_constraintStart_toStartOf="@+id/floating_button_motorcycle"
            app:layout_constraintTop_toTopOf="@+id/floating_button_motorcycle"
            app:layout_constraintBottom_toBottomOf="@+id/floating_button_motorcycle"
            android:contentDescription="@string/button_description"/>

</androidx.constraintlayout.widget.ConstraintLayout>
